{
    "name": "FitCheck",
    "description": "FitCheck Chrome Extension.",
    "version": "1.0.0",
    "content_security_policy": "script-src 'self' ; object-src 'self'",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_title": "FitCheck",
        "default_popup": "index.html",
        "default_icon": "/icons/Icon-192.png"
    },
    "permissions": ["contextMenus", "notifications", "storage"],
    "icons": {
        "16": "/icons/shirt/icon-bitty.png",
        "48": "/icons/shirt/icon-small.png",
        "128": "/icons/shirt/icon-large.png"
    },
    "manifest_version": 2
}
